{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        /* Lit */
        "experimentalDecorators": true, // default for TypeScript 5.0 and up
        "useDefineForClassFields": false, // default when "target" is "ES2022" or higher

        /* Bypass */
        // "noImplicitAny": false,
        // "noUnusedLocals": false,
        // "noUnusedParameters": false
    },
    "include": ["src"]
}
