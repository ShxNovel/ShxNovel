{
    "compilerOptions": {
        "target": "es2017",
        "module": "ESNext",
        "lib": ["ES2021", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,

        /* Linting */
        "strict": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        /* Lit */
        "experimentalDecorators": true, // default for TypeScript 5.0 and up
        "useDefineForClassFields": false, // default when "target" is "ES2022" or higher

        "baseUrl": ".",
        "paths": {
            "@barba/core": ["./node_modules/@barba/core/dist/core/src/src"],
            "@barba/route": ["./node_modules/@barba/router/dist/router/src/src"],
            "@/*": ["./src/*"],
            "/*": ["./public/*"]
        }
    },
    "include": ["index.ts", "src", "./types/*"]
}
